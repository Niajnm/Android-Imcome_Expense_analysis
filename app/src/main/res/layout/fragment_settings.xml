<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.NavDrawer.SettingsFragment">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/mycustom" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_id1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_toolbar"
        android:layout_alignParentStart="true"

        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp">


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_id2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/card_id1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
      >


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_id3"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/card_id2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">


    </androidx.cardview.widget.CardView>

</RelativeLayout>